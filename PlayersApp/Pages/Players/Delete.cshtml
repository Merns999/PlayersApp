@page 

<head>
    <script src="~/js/site.js"></script>
    <script src="~/js/JQuery.js"></script>
    <script src="~/js/Knockout.js"></script>
</head>
<h2 class="mb-3">Delete</h2>
<form id="deleteForm">
    
    <div class="col-md-6 mb-3">
        <label for="id">Id</label>
        <input type="text" class="form-control" id="id" data-bind="value: id" readonly>
        <div class="invalid-feedback">
            Valid name is required.
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <label for="Name">Full name</label>
        <input type="text" class="form-control" id="Name"  data-bind="text: Name">
        <div class="invalid-feedback">
            Valid name is required.
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <button class="btn btn-danger btn-lg btn-block" type="submit">Delete</button>
    </div>
    <a class="navbar-brand text-danger" asp-area="" asp-page="/Players/List">Return</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
</form>